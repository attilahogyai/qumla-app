{{#page-view scrollToTop=true}}
<div class="section no-pad-bot" id="index-banner">
	<div class="container">
		<div class="row">
			<div class="col s12">
			{{search-box breadcrumb=(loc-x (concat-str '/category/' filterName))}}
			</div>			

			<div class="col s12 m7">
			{{question-list questionList=questions infinityLoad='infinityLoad'}}
			</div>
			<div class="col s12 m5">
				{{top-tag tags=tags}}
				{{post-question}}
			</div>
		</div>
	</div>
</div>
{{/page-view}}